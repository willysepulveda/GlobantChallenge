					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "-- Variables para la tabla y el esquema\nDECLARE @tableName NVARCHAR(128) = 'Jobs';\nDECLARE @schemaName NVARCHAR(128) = 'GlobantPoc';\nDECLARE @foreignKeyName NVARCHAR(128);\nDECLARE @sql NVARCHAR(MAX);\n\n-- Obtener el nombre de la restricción de clave foránea\nSELECT TOP 1 @foreignKeyName = name\nFROM sys.foreign_keys\nWHERE referenced_object_id = OBJECT_ID(@schemaName + '.' + @tableName);\n\n-- Construir y ejecutar el SQL dinámico para deshabilitar la restricción\nSET @sql = 'ALTER TABLE ' + @schemaName + '.HiredEmployees DROP CONSTRAINT ' + @foreignKeyName + ';';\nEXEC sp_executesql @sql;\n\n-- Construir y ejecutar el SQL dinámico para truncar la tabla\nSET @sql = 'TRUNCATE TABLE ' + @schemaName + '.' + @tableName + ';';\nEXEC sp_executesql @sql;\n\n-- Construir y ejecutar el SQL dinámico para volver a agregar la restricción de clave foránea\nSET @sql = 'ALTER TABLE ' + @schemaName + '.HiredEmployees ADD CONSTRAINT ' + @foreignKeyName +\n           ' FOREIGN KEY (job_id) REFERENCES ' + @schemaName + '.' + @tableName + '(id);';\nEXEC sp_executesql @sql;\n\n",
